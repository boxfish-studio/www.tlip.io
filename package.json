        "stylelint-scss": "^4.3.0",
        "svelte": "^3.55.0",
        "svelte-check": "^3.0.1",
        "svelte-preprocess": "^5.0.0",
        "tailwindcss": "^3.2.4",
        "tslib": "^2.4.1",
        "typescript": "^4.9.4",
        "vite": "^4.0.4"
