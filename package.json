        "eslint": "^8.31.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsdoc": "^39.6.4",
        "eslint-plugin-svelte3": "^4.0.0",
        "eslint-plugin-unicorn": "^45.0.2",
        "husky": "^8.0.3",
        "lint-staged": "^13.1.0",
